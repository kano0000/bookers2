<%= render 'new', user: @user, book_new: @book_new%>


    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(80,80)%>
                <p><%= @user.name %></p>
              <% end %>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body%></td>
            <% if @user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success"%>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？",
                  class:"btn btn-danger"%>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>