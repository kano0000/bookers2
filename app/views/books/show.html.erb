<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="user_info">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100)%>
        <table>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction%></th>
          </tr>
        </table>
        <%= link_to edit_user_path(@user.id) do%>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <div class="new_book">
        <h2>New book</h2>
        <%= form_with model: @book_new do |f| %>
          <p>Title</p>
            <%= f.text_field :title %>
          <p>Opinion</p>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(80,80)%>
              <% end %>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body%></td>
            <% if @user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success"%>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？"
                  class:"btn btn-danger"%>
            </td>
            <% end %>
          </tr>
          <tr>
            <td>
              <%=link_to @user.name, user_path(@user.id) %>
            </td>
            <td colspan="2"></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>