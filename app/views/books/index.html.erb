<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="user_info">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100)%>
        <table>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction%></th>
          </tr>
        </table>
        <%= link_to edit_user_path(@user.id) do%>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <div class="new_book">
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <p>Title</p>
            <%= f.text_field :title %>
          <p>Opinion</p>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image(80,80)%>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title%>
              <% end %>
            </td>
            <td><%= book.body%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>